<Window x:Class="ColumnCreateFromDWG.View.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColumnCreateFromDWG.View"
        xmlns:localOffset="clr-namespace:ColumnCreateFromDWG.Converter"
        mc:Ignorable="d" 
        Height="325"
        Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Create Columns From DWG"
        FontSize="14">

    <Window.Resources>
        <localOffset:OffsetConverter x:Key="offsetConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.Resources>
            
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2"
                Background="AliceBlue"
                BorderBrush="Gray"
                BorderThickness="0,0,0,2"/>
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Select DWG"
                       VerticalAlignment="Center"/>
            <ComboBox 
                ItemsSource="{Binding DWGs}" 
                SelectedItem="{Binding SelectedDwg, UpdateSourceTrigger=PropertyChanged}" 
                Width="135" 
                Margin="5"
                DisplayMemberPath="Category.Name"
                Background="Gray"/>
        </StackPanel>
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Select Level"
                       VerticalAlignment="Center"/>
            <ComboBox 
                ItemsSource="{Binding Levels}"
                SelectedItem="{Binding SelectedLevel}" 
                DisplayMemberPath="Name"
                Width="135" 
                Margin="5"/>
        </StackPanel>

        <Border Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="0,0,1,0"/>
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="5">
                <TextBlock Text="Select Layer"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                <ComboBox ItemsSource="{Binding Layers}"
                          SelectedItem="{Binding SelectedLayer}"
                          Width="135"/>
            </StackPanel>
            <StackPanel Orientation="Vertical"
                        Margin="5">
                <TextBlock Text="Select Column"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
                <ComboBox
                    ItemsSource="{Binding Columns}" 
                    SelectedItem="{Binding SelectedColumn}"
                    DisplayMemberPath="Name"
                    Width="135"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <TextBlock Text="Base Offset"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Width="80"/>
                <Border BorderThickness="1"
                        BorderBrush="Gray"
                        Width="135"
                        VerticalAlignment="Center">
                    <TextBox x:Name="b_offset"
                        Text="{Binding BaseOffset}"/>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="5">
                <TextBlock x:Name="t_offset" Text="Top Offset"
                           VerticalAlignment="Center"
                           Width="80"/>
                <Border BorderThickness="1"
                        BorderBrush="Gray"
                        Width="135"
                        VerticalAlignment="Center">
                    <TextBox Text="{Binding TopOffset}"/>
                </Border>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="2"
                Background="AliceBlue"
                Grid.ColumnSpan="2"
                BorderBrush="Gray"
                BorderThickness="0,2,0,0"/>
        <Button Content="Create"
                Grid.Row="2"
                Grid.Column="1"
                Margin="10"
                Background="#1E90FF"
                Width="100"
                Command="{Binding CreateColumns}">
            <Button.Style>
                <Style TargetType="Button">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=b_offset, Path=(Validation.HasError)}" Value="True">
                            <Setter Property="IsEnabled" Value="False"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

    </Grid>
</Window>
